<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_aImageViewPlusll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp">

        <com.example.qd.douyinwu.view.ImageViewPlus
            android:id="@+id/iv_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="小可爱"
            android:textColor="#FF666666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="哈哈哈哈哈哈哈哈哈    1天前"
            android:textColor="#FF333333"
            android:textSize="14dp" />
        <LinearLayout
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_comment_like"
                android:src="@drawable/icon_like_png"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_comment_like_num"
                android:textColor="#FF666666"
                android:textSize="10dp"
                android:text="31.9W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<TextView-->
            <!--android:id="@+id/tv_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tv_context"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_toRightOf="@+id/iv_icon"-->
            <!--android:text="2019-01-01"-->
            <!--android:textColor="#FF333333"-->
            <!--android:textSize="13sp" />-->
    </RelativeLayout>
</LinearLayout>